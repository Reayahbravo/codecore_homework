<%- include("partials/header") %>

<% for (let cohort of cohorts) { %>
<div class="card" style="border-color:grey; border-style: solid; border-width: 1px; border-radius: 4px; width: 560px; padding: 20px; margin: 20px 0px;">
  

  <div class="card-body">
  <img src="<%= cohort.logoUrl %>" width="50" style="float: left; margin: 0 10px 10px 0;">
    <h4>
      <%= cohort.name %> 
    </h4><br clear="all">
    <p class="card-text">
      <%= cohort.members %>
    </p>



    <form action="/cohorts/<%= cohort.id %>">
      <input type="submit" class="btn btn-primary btn-lg btn-block" value="Show cohort">
    </form>
  </div>
</div>
<% } %>

<%- include("partials/footer") %>